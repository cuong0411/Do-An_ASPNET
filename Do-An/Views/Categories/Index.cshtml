@*Define Model*@
@model IEnumerable<Category>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Categories";
}
@*Write Code*@
<h1>Category List</h1>
<div class="row">
    <div class="col-8">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil"></i>Edit </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position: fixed; right: 1rem; bottom: 1rem; z-index: 100">
    <a asp-controller="Categories" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New</a>
</div>