@model Category

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
}

<div class="row">
    <div class="col-12 col-md-10 offset-md-1">
        <h2>Chi Tiết Danh Mục</h2>
        <div class="row">
            <div class="col-12 col-md-10 offset-md-1">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Cập nhật</a>
                    <a class="btn btn-outline-info" asp-action="Index">Quay về</a>
                </div>
            </div>
        </div>
    </div>
</div>