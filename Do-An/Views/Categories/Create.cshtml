@model Category

@{
    ViewData["Title"] = "Tạo Danh Mục Mới";
}

<div class="row">
    <div class="col-12 col-md-10 offset-md-1">
        <h2 class="text-center text-info display-4">Tạo Danh Mục Mới</h2>
        <div class="row">
            <div class="col-12 col-md-10 offset-md-1">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="imagePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo mới" class="btn btn-outline-success float-right"/>
                    <a class="btn btn-outline-info" asp-action="Index">Quay về</a>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
