@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<h1>Product List</h1>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-header d-flex justify-content-between">
                <p class="badge badge-pill badge-secondary m-0 d-flex align-items-center">@item.Category.Name</p>
                <a href="#" class="btn btn-outline-primary"><i class="bi bi-cart"></i></a>
            </div>

            <img src=@item.Image class="card-img-top" alt=@item.Name>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Giá: <span class="text-success">@item.Price.ToString("N0")</span> VNĐ</p>
                <div class="card-footer d-flex justify-content-between">
                    <a href="#" class="btn btn btn-outline-info"><i class="bi bi-eye"></i> Details</a>
                    <a href="#" class="btn btn-outline-secondary"><i class="bi bi-pencil"></i> Edit</a>
                    
                </div>
            </div>
        </div>
    }
</div>